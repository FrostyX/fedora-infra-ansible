## {{ env }}
{% for key, value in groups.iteritems()|sort %}
{% if groups[key] != [] and key not in vars['exclude_hostgroups'] %}
define hostgroup{
       hostgroup_name {{ key }}
       alias          {{ key }}
       members        {% for host in groups[key]|sort %}{% if hostvars[host].nagios_Can_Connect == true %}{{host}}, {% endif %}{% endfor %} 

}
{% endif %}
{% endfor %}

define hostgroup{
       hostgroup_name routers
       alias          routers
       members        phx2-gw, ibiblio-gw, dedicated-gw, host1plus-gw, internetx-gw, osuosl-gw, rdu-gw, rdu-cc-gw, iad2-gw
}


