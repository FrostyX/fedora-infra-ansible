        "test": {
            "type": "koschei",
            "category": "integration",
            "namespace": "koschei",
        },
    },
    "caching": {
        "rpm_requires": {
            "backend": "dogpile.cache.memcached",
            "expiration_time": None,
            "arguments": {
                "url": "memcached01",
