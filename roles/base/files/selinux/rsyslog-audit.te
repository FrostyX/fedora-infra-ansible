module rsyslog-audit 1.1;

require {
	type auditd_log_t;
	type syslogd_t;
	class file { getattr ioctl open read };
	class dir { getattr read search };
}

#============= syslogd_t ==============
allow syslogd_t auditd_log_t:dir { getattr read search };
allow syslogd_t auditd_log_t:file { getattr ioctl open read };
