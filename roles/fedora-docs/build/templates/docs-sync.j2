if [ ! -d /srv/web/docs ]
then
	echo "/srv/web/docs missing"
	cd /srv/web
{% if env == 'staging' %}
	git clone https://pagure.io/fedora-docs/fedora-docs-web.git docs
{% else %}
	git clone https://pagure.io/fedora-docs-web.git docs
{% endif %}
fi


cd /srv/web/docs
