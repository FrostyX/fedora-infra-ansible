/var/log/lighttpd/access.log {
    rotate 5
    daily
    missingok
    notifempty
    prerotate
        /usr/bin/copr_log_hitcounter.py /var/log/lighttpd/access.log &>/var/log/copr-backend/hitcounter-logrotate.log
    endscript
    postrotate
        /usr/bin/killall -HUP lighttpd &>/dev/null || :
    endscript
}

/var/log/lighttpd/error.log {
    rotate 5
    missingok
    notifempty
    postrotate
        /usr/bin/killall -HUP lighttpd &>/dev/null || :
    endscript
}
